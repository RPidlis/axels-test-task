{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-unused-vars": 0,
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": [
      0,
      {
        "singleQuote": true,
        "semi": true,
        "trailingComma": "none",
        "tabWidth": 2
      }
    ],
    "react/prop-types": [0, { "ignore": "ignore"}]

  }
}
